<?xml version="1.0" encoding="UTF-8"?>
<layout version="0.1.0">
    <paytpvcom_standard_redirect>
	<reference name="content">
	    <block type="paytpvcom/standard_redirect" name="redirect" template="paytpvcom/redirect.phtml"/>
	</reference>
    </paytpvcom_standard_redirect>
    <paytpvcom_standard_iframe>
        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
            <!-- Mark root page block that template is applied -->
            <action method="setIsHandle"><applied>1</applied></action>
        </reference>
        <reference name="content">
	    <block type="paytpvcom/standard_iframe" name="redirect" template="paytpvcom/iframe.phtml"/>
	</reference>
    </paytpvcom_standard_iframe>
</layout>